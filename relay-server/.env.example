# Relay Server Configuration
# Copy this file to .env and update with your values

# Server port
PORT=3790

# Redis connection URL
# For Docker Compose: redis://redis:6379
# For external Redis: redis://username:password@host:port/db
REDIS_URL=redis://redis:6379

# JWT secret for signing tokens (generate with: openssl rand -hex 32)
JWT_SECRET=change-this-to-a-random-secret-key

# Your domain name (used for generating URLs)
# Examples: relay.clode.studio, app.clode.studio
DOMAIN=relay.clode.studio

# Optional: Allowed origins for CORS (comma-separated)
# ALLOWED_ORIGINS=https://clode.studio,https://app.clode.studio

# Optional: Environment (development, production)
NODE_ENV=production

# Optional: Log level (error, warn, info, debug)
LOG_LEVEL=info

# Optional: Maximum sessions per desktop
MAX_SESSIONS_PER_DESKTOP=5

# Optional: Session TTL in seconds (default: 3600 = 1 hour)
SESSION_TTL=3600

# Optional: Enable P2P upgrade attempts
ENABLE_P2P=true

# Optional: STUN/TURN server configuration for P2P
STUN_SERVER=stun:stun.clode.studio:3478
TURN_SERVER=turn:turn.clode.studio:3478
TURN_USERNAME=clode
TURN_CREDENTIAL=your-turn-server-credential